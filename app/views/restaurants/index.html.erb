<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1504674900247-0877df9cc836?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60)">
  Restaurants
</div>


<% @restaurants.each do |restaurant| %>
<div class="card-product">
  <img src="http://unsplash.it/130/130/?random" />
  <div class="card-product-infos">
    <h2><%= restaurant.name %></h2>
    <p><%= restaurant.address %></p>
    <%= link_to "See details", restaurant_path(restaurant), class: "btn btn-primary"%>
  </div>
</div>

<% end %>


